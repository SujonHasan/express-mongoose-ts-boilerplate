{
  "name": "express-mongoose-basic-server",
  "version": "1.0.0",
  "description": "Boilerplate for a startup backend server with nodejs expressjs and mongoose oAuth client authentication",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc --build",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/index.js",
    "dev": "ts-node-dev --project tsconfig.json -r tsconfig-paths/register --respawn --transpile-only  './src/index.ts'",
    "db-seed": "ts-node --project tsconfig.json -r tsconfig-paths/register src/seeds/script.ts"
  },
  "keywords": [
    "express",
    "mongodb",
    "mongoose",
    "nodejs"
  ],
  "author": "Sujon-Hasan",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.0.0",
    "@types/passport": "^1.0.16",
    "@types/passport-http": "^0.3.11",
    "@types/passport-jwt": "^4.0.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-slow-down": "^2.0.3",
    "http-status": "^1.7.4",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "mongoose": "^8.5.1",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.1",
    "ts-node": "^10.9.2",
    "winston": "^3.14.1"
  }
}
