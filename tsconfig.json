{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@controllers/*": ["src/controllers/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"],
      "@validations/*": ["src/validations/*"],
      "@middlewares/*": ["src/middlewares/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}